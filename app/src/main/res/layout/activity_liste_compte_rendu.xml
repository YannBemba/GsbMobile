<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Controlleurs.Listes.ListeCompteRenduActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des comptes rendus"
        android:textColor="@color/dark_theme"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/dark_theme"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <ListView
        android:id="@+id/listCompteRendu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>
    
    <Button
        android:id="@+id/retourMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_marginTop="15dp"
        android:text="Retour" />

</LinearLayout>